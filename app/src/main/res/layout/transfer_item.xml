<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:id="@+id/layout_transfer_item"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_compare_arrows_24" />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo"
        android:text="Relocation date:"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"/>
    <TextView
        android:id="@+id/txtRelocationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txt1"
        android:text="mm/dd/yyyy"
        android:textColor="@android:color/black"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/txtDepartment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo"
        android:text="Department 1"
        android:layout_below="@id/txt1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"/>
    <TextView
        android:id="@+id/txtAssetSN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtDepartment1"
        android:layout_below="@id/txtRelocationDate"
        android:text="00/00/0000"
        android:textColor="@android:color/black"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/txtDepartment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo"
        android:text="Department 2"
        android:layout_below="@id/txtDepartment1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"/>
    <TextView
        android:id="@+id/txtAssetSN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtDepartment2"
        android:layout_below="@id/txtAssetSN1"
        android:text="00/00/0000"
        android:textColor="@android:color/black"
        android:layout_marginEnd="4dp"/>
</RelativeLayout>